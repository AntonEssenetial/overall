
//- Secondary navigation (side-navi)
mixin nav(items)
  nav.main-menu
    ul.menu
      each item, i in items
        if i === pageId
          li.menu__item.menu__item_active
            a.menu__link(href=item.href)= item.name
        else
          li.menu__item
            a.menu__link(href=item.href)= item.name


//- Menu 
mixin content-menu(data)
  menu.row
    each item, i in data
      if i === subId2
        a(href=item.url).menu__link.menu__link_active= item.title
      else  
        a(href=item.url).menu__link= item.title


