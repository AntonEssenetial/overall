mixin icon(name)
  svg(class="icon icon_" + name)&attributes(attributes)
    use(xlink:href=config.path.images + "/icons.svg#" + name)

mixin svg(data)
  svg(class="icon icon_" + data.name , width=data.width, height=data.height)&attributes(attributes)
    image( width=data.width height=data.height xlink:href=config.path.images + "/svg/" + data.name + ".svg")