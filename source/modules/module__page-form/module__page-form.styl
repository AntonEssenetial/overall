.module__page-form
  background: #f2f2f2
  
  &__wrap 
    width: 973px;
    background white
    margin 0 auto
    padding 100px
    position: relative 
    top -150px
    
  .form__input:focus 
    color $dark
    
  .form__input 
    height 45px
    color $dark
    
  .form__label
    margin: 0 0 76px 0;
    box-shadow none
    
  .form__label_reset
    margin: 0 0 66px 0;
    
  .btn-send 
    width 366px
    padding 0 20px
    border 2px solid $dark
    g-bold()
    font-size 16px
    text-transform: uppercase
    letter-spacing 5px
    height 48px
    position: relative
    transition all .3s ease-in-out
    +after('')
      width 100% 
      height 0% 
      position: absolute 
      left 0px 
      bottom 0px
      background: $dark
      transition all .3s ease-in-out
      z-index: -1
    &:hover
      color white
      transition all .3s ease-in-out 
      &:after 
        height 100%
        transition all .3s ease-in-out
    
  textarea 
    height 120px !important
    
  &__str 
    font-size 150px 
    g-bold()
    color #f7f7f7
    text-transform: uppercase
    letter-spacing 40px
    text-align: center
    display: block
    width 100%
    position: absolute
    top 60px
    opacity: 0
    padding-left 49px
    left 0px
    height 144px
    line-height: 144px;
    
  &__str-2
    color $yellow
    font-size 16px
    text-transform: uppercase
    g-bold()
    letter-spacing 5px
    display: block
    margin 0 0 23px 0
    opacity 0
    text-align: center
    position relative 
    
  &__str-3
    position relative 
    color $dark
    text-align: center
    g-bold()
    text-transform: uppercase
    font-size 30px
    letter-spacing 10px
    display: block
    opacity 0
    position: relative;
    left: 9px;
    +after('')
      width 0px 
      height 2px 
      background-color $yellow
      display: block
      margin 25px auto 24px auto
      position: relative 
      left -9px
      
  .label_focus::after
    background: $yellow !important
      
  &__form 
    margin-top 70px
    
  .row.label_focus::after
    display: none

  .jsShow.custom::after 
      width 100%
      transition all 1s ease-in-out
  .jsText.custom
    .module__page-form__str
      textFade()
    p
      textFade2()
      
    .module__page-form__str-2
    .module__page-form__str-3
      textFade3()
      
    .module__page-form__str-3:after 
      width 30px 
      transition all 1s