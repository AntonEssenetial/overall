.module__socials

  .icon 
    width 25px 
    height @width
    fill white
    margin auto
    position relative
    z-index: 1
    trs()
    
  &__icon 
    width 68px 
    height @width
    display: flex
    background-color $dark2
    margin 0 30px 30px 0
    position: relative
    overflow: hidden
    +after('')
      width 100%
      height 100%
      display: block
      position: absolute
      background: white
      transform translateY(68px)
      trs()
      left 0px
    &:hover:after 
      transform translateY(0px)
      trs()
    &:hover .icon 
      fill $dark
      trs()
    
  &__row 
    width 393px