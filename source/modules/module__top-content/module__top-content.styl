.module__top-content
  position: relative 
  height 100%
  background-position center
  background-size cover
  background-repeat no-repeat
  display flex
  
  h1 
    max-width 660px
    line-height 70px
    opacity: 0
  
  +after('')
    position: absolute;
    top: 0;
    left: 0;
    display: block;
    width: 100%;
    height: 100%;
    content: '';
    background: rgba(0,0,0,.65);
    
  &_contacts 
    +after()
      background: rgba(0,0,0,.15);
    
