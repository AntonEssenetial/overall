.module__work
  background: linear-gradient(to bottom, #191919 0%,#191919 717px,#f6f6f6 717px,#f6f6f6 100%);
  padding 140px 0 90px 0
   
  &__img 
    display: block
    width 100%
    height 100%
    
  &__row 
    margin-top 115px
    margin-bottom 55px
    
  &__link 
    display: block
    position: relative
    z-index: 1
    +before('')
      background: #191919
      opacity: 0
      position: absolute
      width 100% 
      height 100%
      left 0px 
      top 0px
      trs()
    
  &__str 
    font-size 24px
    text-transform: uppercase
    g-bold()
    color black
    letter-spacing 10px
    overflow: hidden
    width 0px
    transition width 2s
    white-space nowrap
    padding 25px 0px 25px 0
    background-color: rgb(246, 246, 246)
    display: block
    +before('')
      width 30px 
      display: inline-block
    +after('')
      width 30px 
      display: inline-block
    
  &__title 
    left 0px
    top 70px
    position: absolute
    height 73px
    
  &__title-2
    top 143px
    
  .f__col
    flex 1
    flex-basis 370px
    
  &__item 
    position: relative
    margin-bottom 30px

  &__title &__str 
    transition .3s width .1s
  
  &__title-2 &__str 
    transition .3s width .3s
    
  &__item:hover &__title &__str 
    width 100%
    transition .3s width .1s
    
  &__item:hover &__title-2 &__str
    transition .3s width .3s
    
  &__item:hover &__link:before 
    opacity 0.8
    trs()
    
.jsShow 
  opacity 0 
  
.jsShow.custom 
  &:nth-child(3n+1)
    animation .4s fadeUp .2s ease-out
    animation-fill-mode: forwards;
  &:nth-child(3n+2)
    animation .4s fadeUp .4s ease-out
    animation-fill-mode: forwards;
  &:nth-child(3n+3)
    animation .4s fadeUp .6s ease-out
    animation-fill-mode: forwards;