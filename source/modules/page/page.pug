include ../injected/injected
include ../head/head
include ../scripts/scripts
include ../../helpers/variables
include ../icon/icon


mixin page(data) 
    body.page&attributes(attributes)
      
      +injected: block

      .page__wrapper

        //- Header
        <!-- header -->
        +if('header')
          +use('header')
        
        <!-- content -->
        main.main

          //- Main page 
          +if('page__main')
            +use('page__main')

          //- About
          +if('page__about')
            +use('page__about')

          //- Single
          +if('page__single')
            +use('page__single')

          //- Contact
          +if('page__contact')
            +use('page__contact')

        //- Footer
        <!-- footer -->
        +if('footer')
          +use('footer')
  
        //- Noti
        +if('module__notification')
          +use('module__notification')

      <!-- scripts -->
      +scripts()
      //- +popup()
      //- +notification()