.page_mobile-menu
  overflow: hidden

  .module__logo
  .toggle-menu 
    z-index 3
    position: relative
  .module__main-menu
    transform: translateY(0%);
    

// Links
.btn-link
  g-bold()
  color black
  font-size 40px 
  text-transform: uppercase
  letter-spacing 10px
  position: relative
  overflow: hidden
  padding 0 10px 0 20px 
  position: relative 
  z-index 1
  span
    display: block;
    width: 100%;
    height: 4px;
    background-color: $yellow
    position: absolute;
    top: 50%;
    transform: translateX(-116%);
    z-index: -1;
    trs()
  &:hover 
    span
      transform: translateX(-10%);
      trs() 


// Animation
animation1()
  animation 1s fadeTop 1s ease-out
  animation-fill-mode: forwards;
  opacity: 0
  
animation2()
  animation 1.5s fadeTop 1.5s ease-out
  animation-fill-mode: forwards;
  opacity: 0
  
leftToRight()
  animation 1.5s leftToRight 1s ease-out
  animation-fill-mode: forwards;
  
textFade()
  animation .3s textFade .3s ease-out
  animation-fill-mode: forwards;

textFade2()
  animation .3s textFade .5s ease-out
  animation-fill-mode: forwards;
  
textFade3()
  animation .3s textFade3 .1s ease-out
  animation-fill-mode: forwards;
  
.fadeIn
  animation fadeUp .4s ease-out
  animation-fill-mode: forwards;
  
.fadeTop
  animation fadeTop 1s ease-out
  animation-fill-mode: forwards;
  
@keyframes fadeUp 
  0%
    opacity: 0
    transform translateY(40px)
  40%
    opacity: 1
  100%
    transform translateY(0px)
    opacity: 1
    
@keyframes fadeTop
  0%
    opacity: 0
  100%
    opacity: 1
    
@keyframes leftToRight
  0%
    transform translateX(-30px)
  100%
    transform translateX(0px)
    
@keyframes rightToLeft
  0%
    transform translateX(30px)
  100%
    transform translateX(0px)
    
@keyframes textFade
  0%
    opacity 0
    transform translateY(20px)
  100%
    opacity 1
    transform translateY(0px)
    
@keyframes textFade3
  0%
    opacity 0
    transform translateY(-80px)
  50%
    opacity 1
  100%
    transform translateY(0px)
    opacity 1
    
@keyframes btn 
  0% 
    transform: translateX(-116%);
  100% 
    transform: translateX(-10%);