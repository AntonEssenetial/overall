body 
  font-family $body-font
  -webkit-font-smoothing: antialiased
  min-width: $body-min-width
  max-width: $body-max-width
  margin 0 auto
  background: $dark
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;

  

h1 
  g-bold()
  text-transform: uppercase
  color white
  letter-spacing: 18px
  

