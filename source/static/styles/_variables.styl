// Custom checkbox
customCheckbox(customCheckbox = false)
  if customCheckbox
    input[type='checkbox']
    input[type='radio']
      display none
    .label__checkbox
    .label__radio
    .label__switch
      margin 8px 0 0 0 
      color black
      font-size 14px 
      display flex
      line-height 20px
      cursor pointer
      align-items center
    // Switch 
    .label__switch i 
      width 40px
      height 20px
      background: $dash-border
      display block
      position relative
      cursor pointer
      border 1px solid $dash-border
      margin-right 10px
      +after()
        width 18px 
        height @width
        background: $green
        display: block
        trs()
    // Radio
    .label__radio i 
      width 19px
      height @width
      background: white
      border-radius (50%)
      display block
      position relative
      cursor pointer
      border 1px solid $dash-border
      margin-right 10px
      trs()
      +after('')
        trs()
        width 5px 
        height @width
        background: black
        display: block
        margin 6px
        border-radius (50%)
        display: none
    // Checkbox
    .label__checkbox i 
      width 24px 
      height @width
      display inline-block
      position relative
      border-radius (0px)
      background: white
      border 1px solid $dash-border
      cursor pointer
      margin-right 10px
      trs()
      +after('')
        position: relative
        left 8px
        top 3px
        opacity 0
        margin-top -20px
        display block
        border-bottom 1px solid white 
        border-right 1px solid white
        width 6px 
        height 10px
        trs()
    .label__checkbox  
    .label__radio
      &:hover i 
        border-color $dark-aqua
        trs()
    // Custom checkbox
    .label__checkbox .input__checkbox:checked + i
      background: $green
      border-color $green
      +after()
        opacity 1
        trs()
        transform rotateZ(40deg)
        margin-top 0px
     // Custom radio   
    .label__radio .input__radio:checked + i
      background: $yellow
      border-color black
      +after()
        display: block
        trs()
    // Custom switch
    .label__switch .input__switch:checked + i
      +after()
        opacity 1
        trs()
        margin-top 0px
        margin-left 20px
    

